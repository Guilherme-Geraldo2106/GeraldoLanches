<div class="dropdown">
  <button class="btn btn-secondary dropdown-toggle bg-dark" type="button" id="dropdownMenuButton2" data-bs-toggle="dropdown" aria-expanded="false">
    Produtos
  </button>
  <ul class="dropdown-menu dropdown-menu-dark bg-dark" aria-labelledby="dropdownMenuButton2">
    @foreach(var categoria in Model)
    {
        <li><a class="dropdown-item active bg-dark" asp-controller= "Lanche" asp-action="List" asp-route-categoria="@categoria.CategoriaNome">@categoria.CategoriaNome</a></li>
    }
    <li><hr class="dropdown-divider"></li>
    <li><a class="dropdown-item bg-dark" asp-controller= "Lanche" asp-action="List" asp-route-categoria="">Todos os Lanches</a></li>
  </ul>
</div>
